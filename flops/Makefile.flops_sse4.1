CC=g++
CFLAGS=-O3 -msse4.1 -malign-double -c -DLINUX -I. -LSDL/lib -g
LDFLAGS=
SOURCES=flops_sse.cpp
OBJECTS=$(SOURCES:.cpp=.o)
EXECUTABLE=flops_sse4.1

all: $(SOURCES) $(EXECUTABLE)

$(EXECUTABLE): $(OBJECTS)
	$(CC) $(LDFLAGS) $(OBJECTS) -o $@

.cpp.o:
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -f $(OBJECTS) $(EXECUTABLE)
